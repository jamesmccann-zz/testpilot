<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <div class="apps-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Apps</h3>
        </div>

        <div class="panel-body">
          <% @apps.each do |app| %>
            <div class="row">
              <div class="col-lg-3">
                <h4><%= link_to app.name, app_path(app) %></h4>
              </div>
            </div>
          <% end %>
        </div>
      </div>


    </div>
  </div>
</div>
