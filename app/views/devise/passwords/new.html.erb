<%= form_for(resource, as: resource_name, url: password_path(resource_name), method: :post, html: {class: 'form-authentication', role: 'form'}) do |f| %>
  <h2 class='form-authentication-heading'>
    Forgot your password?
  </h2>
  <%= f.email_field :email, autofocus: true, placeholder: 'Email address', required: true, class: 'form-control'%>

  <%= f.submit 'Send reset password instructions', class: 'btn btn-lg btn-primary btn-block' %>
  <%= render "devise/shared/links" %>
<% end %>


