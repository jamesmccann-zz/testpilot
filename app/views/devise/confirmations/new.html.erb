<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {method: :post, class: 'form-authentication', role: 'form'}) do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email, autofocus: true, placeholder: 'Email address', required: true, class: 'form-control'%>

  <%= f.submit 'Resend confirmation instructions', class: 'btn btn-lg btn-primary btn-block' %>
  <%= render "devise/shared/links" %>
<% end %>


