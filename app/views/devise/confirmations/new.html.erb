<hgroup>
  <h1>Resend confirmation instructions</h1>
</hgroup>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {method: :post, role: 'form'}) do |f| %>

  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, placeholder: 'Email', required: true, class: 'form-control input-block' %>

  <%= f.submit 'Resend confirmation instructions', class: 'button button-primary' %>

  <%= render "devise/shared/links" %>
<% end %>
