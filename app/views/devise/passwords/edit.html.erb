<hgroup>
  <h1>Change your password</h1>
</hgroup>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), method: :put, role: 'form') do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <%= devise_error_messages! %>

  <%= f.password_field :password, autofocus: true, placeholder: 'New password', autocomplete: 'off', required: true, class: 'form-control input-block' %>

  <%= f.password_field :password_confirmation, autofocus: true, placeholder: 'Confirm new password', autocomplete: 'off', required: true, class: 'form-control input-block' %>

  <%= f.submit 'Change my password', class: 'button button-primary' %>

  <%= render "devise/shared/links" %>
<% end %>


