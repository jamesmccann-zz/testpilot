<hgroup>
  <h1>Resend unlock instructions</h1>
</hgroup>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: {method: :post, role: 'form'}) do |f| %>

  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, placeholder: 'Email', required: true, class: 'form-control input-control' %>

  <%= f.submit 'Resend unlock instructions', class: 'button button-primary' %>
  <%= render "devise/shared/links" %>
<% end %>
