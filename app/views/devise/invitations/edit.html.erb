

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), method: :put, html: {class: 'form-authentication form-change-password', role: 'form'}) do |f| %>
  <%= f.hidden_field :invitation_token %>

  <h2 class='form-authentication-heading'>
    <%= t 'devise.invitations.edit.header' %>
  </h2>

  <%= devise_error_messages! %>

  <%= f.password_field :password, autofocus: true, placeholder: 'Password', autocomplete: 'off', required: true, class: 'form-control'%>

  <%= f.password_field :password_confirmation, placeholder: 'Confirm password', autocomplete: 'off', required: true, class: 'form-control'%>

  <%= f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-lg btn-primary btn-block' %>

<% end %>


