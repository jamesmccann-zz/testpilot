<hgroup>
  <h1>Forgot your password?</h1>
</hgroup>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), method: :post, html: {class: 'form-authentication', role: 'form'}) do |f| %>

  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, placeholder: 'Email', required: true, class: 'form-control input-block' %>

  <%= f.submit 'Send reset password instructions', class: 'button button-primary' %>

  <%= render "devise/shared/links" %>
<% end %>


